# Frontend Configuration
PORT=3000
REACT_APP_API_URL=http://localhost:5000/api/v1
REACT_APP_ENV=development

# Docker Compose Environment Variables
# This file is used by docker-compose.yml for all services

# PostgreSQL Configuration
POSTGRES_USER=qcollector
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=qcollector_db
POSTGRES_PORT=5432

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-minio-password-here
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_USE_SSL=false
MINIO_BUCKET=qcollector

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here
REDIS_PORT=6379

# LibreTranslate Configuration (Self-hosted Translation Service)
LIBRETRANSLATE_URL=http://localhost:5555
LIBRETRANSLATE_PORT=5555
LIBRETRANSLATE_API_KEY=

# API Backend Configuration
NODE_ENV=development
API_PORT=5000
DB_AUTO_SYNC=true

# Security Keys (Generate your own secure keys)
JWT_SECRET=your-jwt-secret-key-min-64-chars-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-encryption-key-min-64-chars-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# PgAdmin Configuration
PGADMIN_EMAIL=admin@qcollector.local
PGADMIN_PASSWORD=pgadmin_password
PGADMIN_PORT=8080

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Build Target
BUILD_TARGET=development

# Telegram Bot Configuration (TESTING ONLY)
# Get token from @BotFather on Telegram
# Get group ID from @getidsbot
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_GROUP_ID=your-group-id-here

# ===== BACKGROUND PROCESSING CONFIGURATION =====

# Queue Service Configuration
ENABLE_QUEUE_SERVICE=true
REDIS_QUEUE_DB=1

# Email Service Configuration
ENABLE_EMAIL_SERVICE=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_MAX_CONNECTIONS=5
SMTP_MAX_MESSAGES=100
EMAIL_FROM=Q-Collector <your-email@gmail.com>
EMAIL_REPLY_TO=noreply@qcollector.local

# File Processing Configuration
TEMP_DIR=./temp
UPLOAD_MAX_SIZE=10485760
IMAGE_QUALITY=85
WEBP_QUALITY=80

# Export Configuration
EXPORT_DIR=./exports
EXPORT_RETENTION_DAYS=7

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# Job Processing Concurrency
EMAIL_CONCURRENCY=5
FILE_CONCURRENCY=2
EXPORT_CONCURRENCY=1
ANALYTICS_CONCURRENCY=2
SYSTEM_CONCURRENCY=1
